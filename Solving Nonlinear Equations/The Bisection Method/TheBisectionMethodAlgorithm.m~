
x = linspace(-2,1);
y = 0.5 - sin(x) - x.^2;

plot(x,y,'LineWidth',2);
title('$$f(x) = 0.5 - \sin(x) - x^{2}$$','interpreter','latex')
grid on
xlabel('x')
ylabel('y')
yline(0)

xn = 0.2;
xp = 0.5;
xline(x1,)
xline(x2,')

% The Bisection Method Algorithm

xmp = (xp + xn) / 2;
ymp = 0.5 - sin(xmp) - xmp^2;

while abs(ymp) <= 0.0001
    
    if ymp > 0
        xp = xmp;
    else
        xn = xmp;
    end
    
    xmp = (xp + xn) / 2;
    ymp = 0.5 - sin(xmp) - xmp^2;

end

xline('')